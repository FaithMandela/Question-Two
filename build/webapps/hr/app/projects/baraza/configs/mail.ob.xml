<?xml version="1.0"?>
<ESCALATION title="Baraza Mail" processdelay="5"
	host="localhost" mailuser="sysadmin" mailpassword="invent" mailfrom="dennis@localhost"
	inbox="INBOX" sentbox="Sent">
	
	<REPORT name="Alert" keyfield="ad_alert_id" action="dc_emailed" actioncount="1" 
			table="dc_alerts"
			where="(status = 'NEW')">
		<ADDRESS title="address">get_alert_email(dc_alerts.ad_alertrule_id)</ADDRESS>
		<SUBJECT title="subject">dc_alerts.name</SUBJECT>
		<FIELD title="Body" basetable="dc_alerts">description</FIELD>
	</REPORT>

</ESCALATION>
