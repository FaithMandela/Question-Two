<APP>
	<MENU name="Sacco">
		<MENU name="My Details" role="applicant">24</MENU>
		<MENU name="Service Desk" role="member">
			<MENU name="Loans">null</MENU>
			<MENU name="Guarantor">null</MENU>
			<MENU name="Contributions">null</MENU>
			<MENU name="investments">null</MENU>
		</MENU>
		<MENU name="Master" role="master">
			<MENU name="Master  Approvals">null</MENU>
			<MENU name="Master All Approvals">null</MENU>
			<MENU name="Subscriptions">null</MENU>
			<MENU name="Organisation">null</MENU>
		</MENU>
		<MENU name="Administration" role="staff,admin,manager">
			<MENU name="Members">null</MENU>
			<MENU name="Contributions" role="admin">null</MENU>
			<MENU name="Loans" role="admin">null</MENU>
			<MENU name="Investments" role="admin">null</MENU>
			<MENU name="Workflows" role="staff,manager,admin">null</MENU>
			<MENU name="News" role="admin">null</MENU>
			<MENU name="EMails" role="admin">null</MENU>
			<MENU name="Files" role="admin">null</MENU>
			<MENU name="All Approvals" role="manager,admin">null</MENU>
			<MENU name="Approvals" role="admin">null</MENU>
			<MENU name="Entitys" role="admin">null</MENU>
		</MENU>
		<MENU name="Reports" role="admin, manager,member">
			<MENU name="New Members" role="manager,admin,member">null</MENU>
			<MENU name="Transaction Ledger" role="member">null</MENU>
			<MENU name="Member Reports" role="member">null
				<MENU name="Loan">245</MENU>
				<MENU name="Contributions">250</MENU>
				<MENU name="Investments">255</MENU>
			</MENU>
			<MENU name="Member Reports" role="admin">null
				<MENU name="Loan Repayment">265</MENU>
			</MENU>
		</MENU>
		<MENU name="Finance" role="admin,manager,member,staff" xml="finance.xml">0</MENU>
	</MENU>
	<DESK w="700" name="Dashboard" h="500">
		<DASHBOARD w="650" name="Dashboard">
			<TILE w="25" name="Active Members" role="admin" noorg.query="true" table="vw_entitys_types" where="(is_active = true and entity_id Not in (0,1) and function_role= 'member')" h="25">
				<TEXTFIELD w="25" fnct="COALESCE(count(entity_id), 0)" title="Total Members">total_Members</TEXTFIELD>
			</TILE>
			<TILE name="Total contributions" role="admin" noorg.query="true" table="contributions" where="(entity_id Not in (0,1))">
				<TEXTFIELD w="60" fnct="COALESCE(sum(deposit_amount), 0)" title="Total Deposits">Total_deposits</TEXTFIELD>
			</TILE>
			<TILE name="Month Balance" role="admin" noorg.query="true" table="vw_loan_monthly" where="(entity_id Not in (0,1))">
				<TEXTFIELD w="60" fnct="COALESCE(sum(loan_balance), 0)" title="Total Loans" h="60">Pending_loans</TEXTFIELD>
			</TILE>
			<TILE name="My Active Loans" role="member" noorg.query="true" table="loans" user="entity_id">
				<TEXTFIELD w="60" fnct="COALESCE(COUNT(loan_Id))" title="My Active Loans" h="60">My_Active_loans</TEXTFIELD>
			</TILE>
			<TILE name="My loan Balances" role="member" noorg.query="true" table="vw_loans" where="(approve_status ='Approved')" user="entity_id">
				<TEXTFIELD w="60" fnct="COALESCE(SUM(loan_balance),0)" title="Total Loans" h="60">My_loan_balance</TEXTFIELD>
			</TILE>
			<TILE name="My investments" role="member" noorg.query="true" table="investments" user="entity_id">
				<TEXTFIELD w="60" fnct="ROUND((yearly_dividend) ::numeric,2)" title="Total investments" h="60">My_Yearly_dividends</TEXTFIELD>
			</TILE>
			<TILELIST name="News" noorg.query="true" table="sys_news" where="(publish= 'true')">
				<TEXTFIELD w="75" title="News">sys_news_title</TEXTFIELD>
				<TEXTFIELD w="75" title="Details">details</TEXTFIELD>
			</TILELIST>
			<TILELIST name="My Loans" keyfield="loan_id" role="member" noorg.query="true" orderby="(loan_month_Id)" table="vw_loan_monthly" where="(activated='True')" user="entity_id">
				<TEXTFIELD w="75" title="Principle">principle</TEXTFIELD>
				<TEXTFIELD w="75" title="Loan Balance">loan_balance</TEXTFIELD>
				<TEXTFIELD w="75" title="total Repayments">total_repayment</TEXTFIELD>
			</TILELIST>
		</DASHBOARD>
	</DESK>
</APP>
