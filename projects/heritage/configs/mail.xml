<?xml version="1.0"?>
<ESCALATION title="Heritage Mail" processdelay="2"
	host="mail.travelport.co.ke" mailuser="heritage.app@travelport.co.ke" mailpassword="Z3jB4MgoDeb4"
	mailfrom="heritage.app@travelport.co.ke"
	inbox="INBOX" sentbox="INBOX.Sent" smtppauth="true"
	reportpath="/opt/baraza/projects/heritage/reports/">

	<REPORT name="Insurance" keyfield="sys_emailed_id" action="Emailed" actioncount="1" infile="true"
			table="sys_emails, sys_emailed, vw_passengers,vw_entitys"
			where="(vw_passengers.passenger_id = sys_emailed.table_id) AND (sys_emailed.emailed = false)
			AND (vw_entitys.entity_id = vw_passengers.entity_id) AND vw_passengers.incountry is false AND  vw_passengers.customer_code is null AND (sys_emails.sys_email_id = sys_emailed.sys_email_id)">
		<SUBJECT title="subject">sys_emails.title</SUBJECT>
		<ADDRESS title="address">vw_entitys.primary_email</ADDRESS>
		<CCTO title="cc" basetable="vw_passengers" >passenger_email</CCTO>
		<BODYFIELD reference="{{name}}" basetable="vw_entitys">entity_name</BODYFIELD>
		<BODYFIELD reference="{{rate_plan}}" basetable="vw_passengers" >rate_plan_id</BODYFIELD>
		<PARAM basetable="vw_passengers">passenger_id</PARAM>
		<FIELD title="Body" basetable="sys_emails">details</FIELD>
		<REPORT fnct="'letterToEmbassy.jasper'::varchar">letterToEmbassy</REPORT>
		<REPORT fnct="'certificate.jasper'::varchar">emergency_Card</REPORT>
	</REPORT>
	<REPORT name="Corporate Insurance" keyfield="sys_emailed_id" action="Emailed" actioncount="1" infile="true"
			table="sys_emails, sys_emailed, vw_corporate_passengers,vw_entitys"
			where="(vw_corporate_passengers.passenger_id = sys_emailed.table_id) AND (sys_emailed.emailed = false)
